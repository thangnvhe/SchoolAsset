@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" id="deleteForm" asp-area="Admin" asp-controller="Category" asp-action="Delete">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input readonly asp-for="CategoryId" class="form-control border-0 shadow" />
                    <label asp-for="CategoryId" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input readonly asp-for="CategoryName" class="form-control border-0 shadow" />
                    <label asp-for="CategoryName" class="ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="button" onclick="confirmDelete()" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

<script>
    function confirmDelete() {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                // Gửi form hoặc AJAX delete ở đây
                toastr.success("Category has been deleted successfully.");

                // Giả lập submit form (thay 'deleteForm' bằng id form thật của bạn)
                document.getElementById("deleteForm").submit();
            }
        });
    }
</script>