@model Building

<h2>Delete</h2>
<form method="post" id="deleteForm" asp-area="Admin" asp-controller="Building" asp-action="Delete">
    <div class="form-group">
        <label asp-for="BuildingId" class="control-label"></label>
        <input asp-for="BuildingId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="BuildingName" class="control-label"></label>
        <input asp-for="BuildingName" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Building_Date" class="control-label"></label>
        <input asp-for="Building_Date" class="form-control" readonly />
    </div>
    <div class="form-group mt-2">
        <button type="button" onclick="confirmDelete()" class="btn btn-primary">Delete</button>
        <a asp-area="Admin" asp-controller="Building" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

<script>
    function confirmDelete() {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                // Gửi form hoặc AJAX delete ở đây
                toastr.success("Building has been deleted successfully.");

                // Giả lập submit form (thay 'deleteForm' bằng id form thật của bạn)
                document.getElementById("deleteForm").submit();
            }
        });
    }
</script>